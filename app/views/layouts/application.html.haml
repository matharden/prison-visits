!!!
%html
  %head
    = render "shared/head", :title => Rails.configuration.app_title
    = csrf_meta_tag
    :javascript
      var pvbe = pvbe || {};
    = render "shared/analytics"

  %body{:class => [Rails.configuration.phase, Rails.configuration.product_type, controller.action_name].join(' ') }

    = render "shared/header"
    = render "shared/cookie_message"
    = render "shared/phase_indicator"

    %main#wrapper(role="main")
      .container
        %section.content.inner
          %header
            = yield :header
        %section.inner.cf
          - if notice.present?
            %p.validation-summary= notice
          = yield

    = render "shared/footer"
    
    = render "shared/script"

