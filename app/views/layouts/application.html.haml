%head
  = render "shared/head", :title => page_title(yield(:header))
  :erb
    <!--[if IE 8]><link href="<%= asset_path "ie8.css" %>" media="screen" rel="stylesheet" type="text/css" /><![endif]-->
  = csrf_meta_tag
  :javascript
    var pvbe = pvbe || {};
  %script(src='/modernizr.custom.44058.js')
  = render "shared/analytics"

%body{:class => [Rails.configuration.phase, Rails.configuration.product_type, controller.action_name].join(' ') }

  = render "shared/header"
  = render "shared/cookie_message"
  = render "shared/phase_indicator"

  %main#wrapper(role="main")
    .container
      %section.content.inner.cf
        %header
          %h1= yield :header

        = render "shared/cookie_required"

        = render "shared/bookmarklets" if Rails.env.development? || (Rails.env.production? && ENV['APP_PLATFORM'] != 'production')
        
        = yield :progress_bar
        
        - if notice.present?
          %p.validation-summary= notice
        
        .content-inner
          = yield

  = render "shared/footer"
  
  %script{src: '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'}
  :javascript
    window.jQuery || document.write('<script src="/assets/jquery-1.10.2.min.js">\x3C/script>')
  = render "shared/script"

:erb
  </html>
