- content_for :page_title do
  = page_title(yield(:header))


- content_for :stylesheets do
  %script(src='/modernizr.custom.44058.js')
  /[if IE 6]
    = stylesheet_link_tag "application-ie6", media: "all"
  /[if IE 7]
    = stylesheet_link_tag "application-ie7", media: "all"
  /[if IE 8]
    = stylesheet_link_tag "application-ie8", media: "all"
  = "<!--[if gt IE 8]><!-->#{stylesheet_link_tag("application", media: "all")}<!--<![endif]-->".html_safe


- content_for :head do
  %meta{name: 'msapplication-config', content: 'none'}
  = csrf_meta_tag
  :javascript
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
 
    ga('create', '#{config_item :ga_id}', 'service.gov.uk');
    #{yield :analytics}
    ga('set', 'anonymizeIp', true);
    ga('send', 'pageview');


- content_for :javascripts do
  %script{src: '//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js'}
  :javascript
    window._ || document.write('<script src="/assets/lodash-2.4.1.min.js">\x3C/script>')
  = javascript_include_tag "application"


- content_for :body_classes, "#{config_item(:phase).to_s.downcase} #{config_item(:product_type).to_s.downcase} #{controller.controller_name} #{controller.action_name}"


- content_for :feedback_link, link_to("your feedback", new_feedback_path(referrer: request.original_url))


- content_for :after_header do
  / [if lte IE 6] <script>document.body.className = document.body.className.replace('js-enabled','');</script>


- content_for :content_override do
  %main#wrapper(role="main")
    .container
      %section#content.content.inner.cf
        - if controller.controller_name == 'visit'
          = render "shared/cookie_required"

        = yield :progress_bar
        
        %header
          %h1= yield :header

        - if notice.present?
          %p.validation-summary= notice
        
        .content-inner
          = yield


- content_for :footer_app_links do
  %li
    %a{href: "http://www.gov.uk/help"} Help
  %li
    = link_to "Cookies", cookies_path
  %li
    = link_to "Terms & Conditions", terms_and_conditions_path
  %li
    = link_to "Feedback", new_feedback_path(referrer: request.original_url)
  %li
    %a{href: "http://www.gov.uk/cymraeg"} Cymraeg


= render template: "layouts/moj_template"
