:scss
  .copy-paste-window {
    word-wrap: break-word;
    border: thin solid gray;
    padding: 5px;
  }

  .button {
    color: white;
    background: #00823b;
    text-decoration: none;
    padding: 7px 12px 5px;
    font-family: arial;
    font-weight: bold;
    letter-spacing: 0.03em;
    border-bottom: 2px solid #003518;
    margin-top: 1em;
    display: inline-block;
  }

  body {
    font-family: Helvetica, Arial, sans-serif;
    font-size: 16px;
  }

  .email-container {
    max-width: 600px;
    margin: auto;
  }
  
  .banner {
    background: #0b0c0c;
  }

  .content {
    padding: 16px 30px 0;
  }

  h1 {
    font-size: 24px;
  }

  .confirmation {
    padding: 8px 16px;
    background: #dee0e2;
  }
